{
  "compilerOptions":{
     "target":"es2017",
     "module":"commonjs",
     "strict":true,
     "esModuleInterop":true,
     "skipLibCheck":true,
     "forceConsistentCasingInFileNames":true,
     "moduleResolution":"node",
     "sourceMap":true,
     "outDir":"dist",
     "baseUrl":".",
     "paths":{
        "*":[
           "node_modules/*"
        ]
     }
  },
  "include":[
     "./src/**/*"
  ]
}
